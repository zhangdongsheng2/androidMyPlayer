<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/item_divider</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Android 5.0 中使用的带波纹的button -->
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#268dff</item>
        <item name="colorButtonNormal">#c7edcc</item>
    </style>
    <!-- Android 5.0 以下兼容  中使用的带波纹的button -->
    <style name="GreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_ripple_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 低栏RadioButton的样式 -->
    <style name="BottomTabStyle">
        <item name="android:background">@drawable/selector_ripple_bg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/btn_tab_text_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
